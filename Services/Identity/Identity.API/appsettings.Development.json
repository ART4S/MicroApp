{
  "Logging": {
    "LogLevel": {
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database": "Error"
    }
  },

  "AuthSettings": {
    "IssuerUri": "http://identity-api",
    "CookieLifetimeSec": 1800, // 30 min,
    "CookieSlidingExpiration": true
  },

  "ClientsSettings": {
    "Spa": {
      "ClientId": "spa",
      "ClientSecret": "secret",
      "RedirectUris": [
        "http://localhost:4000/api/auth/callback"
      ],
      "AllowedScopes": [
        "openid"
      ]
    }
  }
}
