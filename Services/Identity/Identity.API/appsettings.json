{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },

  "AllowedHosts": "*",

  "AuthSettings": {
    "CookieLifetimeSec": 1800, // 30 min,
    "CookieSlidingExpiration": true
  },

  "ClientsSettings": {
    "Spa": {
      "ClientId": "spa",
      "ClientSecret": "secret",
      "AllowedScopes": [
        "openid"
      ],
      "IdTokenLifetimeSec": 1800 // 30 min,
    }
  }
}
