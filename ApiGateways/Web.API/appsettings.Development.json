{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ExternalUrls": {
    "Catalog": {
      "BasePath": "http://catalog-api",
      "GetItemUrl": "/api/catalog/{id}/info",
      "GetItemsUrl": "/api/catalog",
      "GetTypesUrl": "/api/catalog/types",
      "GetBrandsUrl": "/api/catalog/brands",
      "GetPictureUrl": "/api/catalog/{id}/picture",
      "CreateItemUrl": "/api/catalog",
      "UpdateItemUrl": "/api/catalog/{id}",
      "DeleteItemUrl": "/api/catalog/{id}"
    },
    "Basket": {
      "BasePath": "http://basket-api",
    },
    "Ordering": {
      "BasePath": "http://ordering-api",
      "GetOrdersUrl": "/api/orders",
      "GetByIdUrl": "/api/orders/{id}",
      "ConfirmOrderUrl": "/api/orders/{id}",
      "GetPaymentMethodsUrl": "/api/buyers/{id}/paymentMethods",
      "CreatePaymentMethodUrl": "/api/buyers/{id}/paymentMethods",
      "GetOrderStatusesDictUrl": "/api/dictionaries/orderStatuses",
      "GetCardTypesDictUrl": "/api/dictionaries/cardTypes"
    },
    "Identity": {
      "BasePath": "http://identity-api"
    }
  },

  "PolicySettings": {
    "RetryCount": 3,
    "TimeoutSec": 30,
    "CircuitBreaker": {
      "AttemptsBeforeBreak": 3,
      "DurationOfBreakSec": 30
    }
  }
}
